generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  secondName String?
  email String
  password String
  phoneNumber String
  role Role @default(USER)
  Orders Order[]
  Products Product[]
  Comments Comment[]


}

model Order {
  id Int @id @default(autoincrement())
  user User? @relation(fields: [userId], references: [id])
  userId Int?
  date String?
  status String?
  totalPrice Int?
  items Item[]
}

model Item{
  id Int @id @default(autoincrement())
  itemId Int?
  price Int
  quantity Int
  order Order? @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Product {
  id Int @id @default(autoincrement())
  author User? @relation(fields: [authorId], references: [id])
  authorId Int
  productName String
  type String
  string String
  photo String
  price Int
  rating Int
  comments Comment[]
}

model Comment {
  id Int @id @default(autoincrement())
  comment String
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  product Product @relation(fields: [productId], references: [id])
  productId Int
}

enum Role{
  USER
  ADMIN
  SUPERAMDIN
}


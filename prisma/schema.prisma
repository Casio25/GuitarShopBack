generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String
  password String
  phoneNumber String
  role Role @default(USER)
  Orders Orders[]
  Products Products[]
  Comments Comments[]

}

model Orders {
  id Int @id @default(autoincrement())
  user Users? @relation(fields: [userId], references: [id])
  userId Int?
  date String?
  status String?
  totalPrice Int?
  items Items[]
}

model Items{
  id Int @id @default(autoincrement())
  itemId Int?
  price Int
  quantity Int
  order Orders? @relation(fields: [orderId], references: [id])
  orderId Int?
}

model Products {
  id Int @id @default(autoincrement())
  author Users? @relation(fields: [authorId], references: [id])
  authorId Int
  productName String
  type String
  photo String
  price Int
  string String
  comments Comments[]
}

model Comments {
  id Int @id @default(autoincrement())
  authorName String 
  comment String
  author Users @relation(fields: [authorId], references: [id])
  authorId Int
  product Products @relation(fields: [productId], references: [id])
  productId Int
}

enum Role{
  USER
  ADMIN
}

